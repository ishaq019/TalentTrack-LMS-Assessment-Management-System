# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/talenttrack?retryWrites=true&w=majority

# JWT Secrets
JWT_ACCESS_SECRET=your-super-secret-access-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars

# Server Configuration
PORT=8080
NODE_ENV=production

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Sender Details
EMAIL_FROM=TalentTrack <noreply@talenttrack.com>

# Frontend URL (for CORS and email links)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Optional: Disable cron jobs on Vercel (recommended)
JOBS_ENABLED=false

# Vercel Detection (automatically set by Vercel)
# VERCEL=1
